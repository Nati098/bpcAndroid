<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"

                    android:layout_centerHorizontal="true"

                    android:layout_margin="8dp"
                    android:maxWidth="500dp"

                    android:scaleType="centerCrop"
                    android:scrollbars="horizontal"
                    app:srcCompat="@drawable/avatar" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pic_size"

                    android:layout_margin="8dp"

                    android:layout_toRightOf="@+id/imageView2"

                    android:text="@string/char1"
                    android:textSize="@dimen/text_size" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="@dimen/pic_size"
                    android:layout_height="wrap_content"

                    android:layout_alignParentTop="true"

                    android:layout_margin="8dp"
                    android:layout_toRightOf="@+id/imageView"

                    app:srcCompat="@drawable/ic_atom" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pic_size"

                    android:layout_below="@+id/imageView2"

                    android:layout_margin="8dp"
                    android:layout_toRightOf="@+id/imageView3"

                    android:text="@string/char2"
                    android:textSize="@dimen/text_size" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="@dimen/pic_size"
                    android:layout_height="@dimen/pic_size"

                    android:layout_below="@+id/imageView2"

                    android:layout_margin="8dp"
                    android:layout_toRightOf="@+id/imageView"

                    app:srcCompat="@drawable/ic_triangle" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView3"

                    android:layout_margin="8dp"

                    android:layout_toRightOf="@+id/imageView"
                    android:maxHeight="500dp" />

                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_below="@+id/textView"

                    android:layout_margin="8dp"
                    android:layout_toRightOf="@+id/imageView"

                    android:ems="10"
                    android:hint="@string/enter_hint"
                    android:inputType="text"
                    android:textSize="@dimen/text_size" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="139dp"
                    android:layout_height="48dp"

                    android:layout_below="@+id/editText3"

                    android:layout_alignParentRight="true"
                    android:layout_margin="8dp"

                    android:background="@android:color/transparent"
                    android:text="@string/button_text"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_size" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="@dimen/pic_size"
                    android:layout_height="@dimen/pic_size"

                    android:layout_alignBottom="@+id/button"

                    android:layout_centerHorizontal="true"
                    android:layout_margin="8dp"
                    android:layout_toRightOf="@id/imageView"


                    app:srcCompat="@drawable/ic_vk_box" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="@dimen/pic_size"
                    android:layout_height="@dimen/pic_size"

                    android:layout_alignBottom="@+id/imageView4"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"

                    android:layout_marginBottom="0dp"
                    android:layout_toRightOf="@+id/imageView4"

                    app:srcCompat="@drawable/ic_github_box" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="@dimen/pic_size"
                    android:layout_height="@dimen/pic_size"

                    android:layout_alignBottom="@+id/imageView5"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"

                    android:layout_marginBottom="0dp"
                    android:layout_toRightOf="@id/imageView5"

                    android:background="@drawable/gradient"
                    app:srcCompat="@drawable/ic_instagram" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>

